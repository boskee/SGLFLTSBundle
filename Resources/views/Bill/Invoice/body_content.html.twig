<table id="bill-body-content">
    <thead>
        <tr>
            <th>{% trans %}flts.bill.invoice.Tasks{% endtrans %}</th>
            <th>{% trans %}flts.bill.invoice.Hours{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
        {% for task in part.tasks %}
        <tr>
            <td style="vertical-align:top;">
                <h3>{{ task }}</h3>
                <ul>
                    <li>edit/remove me</li>
                </ul>
            </td>
            <td style="vertical-align:top;">
                <strong>{{ task.workedHours(bill) }}</strong>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td><h3>{% trans %}flts.bill.invoice.Total hours{% endtrans %}</h3></td>
            <td><strong>{{ bill.hours }}</strong></td>
        </tr>
    </tfoot>
</table>