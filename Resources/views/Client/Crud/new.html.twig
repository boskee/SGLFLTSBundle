{% extends 'SGLFLTSBundle:Theme:layout.html.twig' %}

{% form_theme form 'SGLFLTSBundle:Theme:Common/fields.html.twig' %}

{% block content %}
    {{ parent() }}

    <h1>{% trans %}Client creation{% endtrans%}</h1>
    
    <form action="{{ path('sgl_flts_client_create') }}" method="post" {{ form_enctype(form) }}>

        {{ form_widget(form) }}

        <div class="record_submit">
            <input type="submit" class="create" value="{% trans %}Create{% endtrans%}" />
        </div>

    </form>

    {% include 'SGLFLTSBundle:Theme:Common/record_actions.html.twig' with { 'entity_name': 'client','entity': false } %}
{% endblock %}