{% extends 'SGLFLTSBundle:Client:layout.html.twig' %}

{% block content_title %}<h1>{{ entity.name }}</h1>{% endblock %}

{% block content %}
    {{ parent() }}
    
    {% if (entity.path) %}
        <img src="{{ asset(entity.webPath) }}" alt="{{ entity.name }}" />
    {% endif %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Address{% endtrans %}</th>
                <td>{{ entity.address|nl2br }}</td>
            </tr>
            <tr>
                <th>{% trans %}Contact name{% endtrans %}</th>
                <td>{{ entity.contactName }}</td>
            </tr>
            <tr>
                <th>{% trans %}Contact email address{% endtrans %}</th>
                <td>{{ entity.contactEmail }}</td>
            </tr>
            <tr>
                <th>{% trans %}Default rate{% endtrans %}</th>
                <td>{{ entity.rate }}</td>
            </tr>
            <tr>
                <th>{% trans %}Created at{% endtrans%}</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>{% trans %}Updated at{% endtrans%}</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>
    
    {% include 'SGLFLTSBundle:Theme:Common/record_actions.html.twig' with { 'entity_name': 'client','entity': entity } %}

{% endblock %}