{% extends 'SGLFLTSBundle:Task:layout.html.twig' %}

{% block content %}

    <h2>{% trans %}Part{% endtrans %} : {{ part.fullname }}</h2>
    <h3>{{ entity.fullname }}</h3>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Identification</th>
                <td>{{ entity.identification }}</td>
            </tr>
            <tr>
                <th>Estimated</th>
                <td>{{ entity.estimatedhours|hours }}</td>
            </tr>
            <tr>
                <th>Rank</th>
                <td>{{ entity.rank }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

    {% include 'SGLFLTSBundle:Task:Common/record_actions.html.twig' with { 'project': project, 'part': part} %}

{% endblock %}