<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block pagetitle %}{% endblock %}</title>
        {% block stylesheets %}
            {% include 'SGLFLTSBundle:Theme:Global/stylesheets.html.twig' %}
        {% endblock %}
        {% block javascripts %}
            {% include 'SGLFLTSBundle:Theme:Global/javascripts.html.twig' %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body class="{{ getControllerName(app.request.attributes)|lower }}-body">
        <aside id="top-bar">
            {% block aside %}{% endblock %}
        </aside>

        <div id="wrapper">
            <header>
                {% block header %}{% endblock %}
            </header>

            {% block nav %}{% endblock %}
            
            <div id="content">
            {% block body %}
                <section class="{{ getControllerName(app.request.attributes)|lower }}-page {{ getActionName(app.request.attributes)|lower }}-action">
                    {% block identification_title %}{% endblock %}
                    {% block content_title %}{% endblock %}
                    {% block notice %}{% endblock %}
                    {% block content %}{% endblock %}
                </section>
            {% endblock %}
            </div>
        </div>

        <footer>
            {% block footer %}{% endblock %}
        </footer>

        {% block doc_ready %}
            <script type="text/javascript">doc_ready();</script>
        {% endblock %}
    </body>
</html>
