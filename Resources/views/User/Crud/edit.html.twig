{% extends 'SGLFLTSBundle:Theme:layout.html.twig' %}

{% form_theme edit_form 'SGLFLTSBundle:Theme:Common/fields.html.twig' %}

{% block content %}
    {{ parent() }}

    <h1>{% trans %}Edit{% endtrans%} {{ entity.fullname }}</h1>

    <form action="{{ path('sgl_flts_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}

        <div class="record_submit">
            <input type="submit" class="edit" value="{% trans %}Edit{% endtrans%}" />
        </div>
    </form>

    {% include 'SGLFLTSBundle:Theme:Common/record_actions.html.twig' with { 'entity_name': 'user','entity': entity } %}

{% endblock %}