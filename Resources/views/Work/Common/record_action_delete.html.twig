<li class="very-last">
    <form id="delete_work_form" action="{{ path('sgl_flts_work_delete', { 'id': entity.id }) }}" method="post">
        {{ form_widget(delete_form) }}
        <button type="submit" class="delete {% if (entity.sent) %}inactive{% endif %}">{% trans %}Delete{% endtrans%}</button>
    </form>
</li>

<script type="text/javascript">
$('#delete_work_form').submit(function() {
    {% if (entity.sent) %}
    return call_alert('{% trans %}Cannot delete work since the bill is sent{% endtrans %}');
    {% else %}
    return confirm('Are you sure?');
    {% endif %}
});
</script>